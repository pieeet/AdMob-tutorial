<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rocdev.adexercise.InterstitialActivity">


    <Button
        android:id="@+id/loadInterstitialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadInterstitial"
        android:text="Load Interstitial" />

    <Button
        android:id="@+id/showInterstitialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Interstitial not loaded"
        android:text="Show Interstitial" />
</LinearLayout>
