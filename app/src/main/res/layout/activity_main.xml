<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rocdev.adexercise.MainActivity">


    <Button
        android:id="@+id/bannerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToBannerActivity"
        android:text="Banner Activity" />

    <Button
        android:id="@+id/interstitialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToInterstitialActivity"
        android:text="Interstitial Activity" />
</LinearLayout>
